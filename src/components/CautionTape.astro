---
interface Props {
  position?: 'top' | 'bottom'
  direction?: 'normal' | 'reverse'
  text?: string
  divider?: string
  repeatCount?: number
}

const { position = 'top', direction = 'normal', text = 'CAUTION', divider = ' /// ', repeatCount = 200 } = Astro.props

const pattern = (divider + text).repeat(repeatCount) + divider
---

<div class={`caution-tape-wrapper ${position}`}>
  <div class="caution-tape" style={`animation-direction: ${direction};`}>
    {pattern}
  </div>
</div>

<style>
  .caution-tape-wrapper {
    position: absolute;
    left: 0;
    width: 100%;
    overflow: hidden;
    z-index: 1000;
  }

  .caution-tape-wrapper.top {
    top: 1rem;
  }

  .caution-tape-wrapper.bottom {
    bottom: 1rem;
  }

  .caution-tape {
    background: transparent;
    color: var(--theme-text-dim);
    font-family: var(--font-mono);
    font-weight: normal;
    font-size: 0.75rem;
    line-height: 1;
    padding: 0.5rem 0;
    white-space: nowrap;
    letter-spacing: 0.05em;
    opacity: 0.4;
    width: max-content;
    animation: scroll 120s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
