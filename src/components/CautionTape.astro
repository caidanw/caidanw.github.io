---
interface Props {
  position?: 'top' | 'bottom'
  direction?: 'left' | 'right'
}

const { position = 'top', direction = 'left' } = Astro.props
const animationName = direction === 'left' ? 'scrollLeft' : 'scrollRight'
const positionClass = position === 'top' ? 'top' : 'bottom'
---

<div class={`caution-tape-wrapper ${positionClass}`}>
  <div class="caution-tape" style={`animation: ${animationName} 20s linear infinite;`}>
    ///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///
  </div>
</div>

<style>
  .caution-tape-wrapper {
    position: fixed;
    left: 0;
    width: 100%;
    overflow: hidden;
    z-index: 1000;
  }

  .caution-tape-wrapper.top {
    top: 0;
  }

  .caution-tape-wrapper.bottom {
    bottom: 0;
  }

  .caution-tape {
    background: transparent;
    color: var(--theme-text-dim);
    font-family: var(--font-mono);
    font-weight: normal;
    font-size: 0.75rem;
    padding: 0.5rem 0;
    white-space: nowrap;
    letter-spacing: 0.1em;
    opacity: 0.4;
    width: max-content;
  }

  @keyframes scrollLeft {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scrollRight {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }
</style>
