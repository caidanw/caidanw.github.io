---
interface Props {
  position?: 'top' | 'bottom'
  direction?: 'normal' | 'reverse'
  text?: string
  divider?: string
  repeatCount?: number
}

const { position = 'top', direction = 'normal', text = 'CAUTION', divider = ' /// ', repeatCount = 120 } = Astro.props

const pattern = (divider + text).repeat(repeatCount) + divider
---

<div class={`caution-tape-wrapper ${position}`}>
  <div class="caution-tape" style={`animation-direction: ${direction}; animation-duration: ${direction};`}>
    {pattern}
  </div>
</div>

<style>
  .caution-tape-wrapper {
    position: absolute;
    left: 0;
    width: 100%;
    overflow: hidden;

    &.top {
      top: 2rem;
    }

    &.bottom {
      bottom: 2rem;
    }
  }

  .caution-tape {
    background: transparent;
    color: var(--theme-text-dim);
    font-family: var(--font-mono);
    font-weight: normal;
    font-size: 1.25rem;
    line-height: 1;
    white-space: nowrap;
    letter-spacing: 0.02em;
    opacity: 0.4;
    width: max-content;
    animation: scroll 600s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
