---
import Layout from '../layouts/Layout.astro'
import { readFileSync } from 'fs'
import { fileURLToPath } from 'url'
import { dirname, join } from 'path'

const __dirname = dirname(fileURLToPath(import.meta.url))
const iconsPath = join(__dirname, '../images')

const GithubIcon = readFileSync(join(iconsPath, 'icon_github.svg'), 'utf-8')
const BlueskyIcon = readFileSync(join(iconsPath, 'icon_bluesky.svg'), 'utf-8')
const TwitterIcon = readFileSync(join(iconsPath, 'icon_twitter.svg'), 'utf-8')
const ThreadsIcon = readFileSync(join(iconsPath, 'icon_threads.svg'), 'utf-8')
const LinkedInIcon = readFileSync(join(iconsPath, 'icon_linkedin.svg'), 'utf-8')
---

<Layout>
  <main>
    <header>
      <h1>I'm <strong>Caidan Williams</strong></h1>
      <p>a self-taught web developer and designer.</p>
    </header>
    <nav class="socials">
      <a href="https://github.com/caidanw" aria-label="GitHub Profile" target="_blank" rel="noopener">
        <Fragment set:html={GithubIcon} />
      </a>
      <a href="https://bsky.app/profile/caidan.dev" aria-label="Bluesky Profile" target="_blank" rel="noopener">
        <Fragment set:html={BlueskyIcon} />
      </a>
      <a href="https://twitter.com/caidanwilliams" aria-label="Twitter Profile" target="_blank" rel="noopener">
        <Fragment set:html={TwitterIcon} />
      </a>
      <a href="https://threads.net/@ancientsunshine" aria-label="Threads Profile" target="_blank" rel="noopener">
        <Fragment set:html={ThreadsIcon} />
      </a>
      <a href="https://linkedin.com/in/caidan-williams" aria-label="LinkedIn Profile" target="_blank" rel="noopener">
        <Fragment set:html={LinkedInIcon} />
      </a>
    </nav>
  </main>
</Layout>

<style>
  main {
    max-width: 60ch;
    padding: 2rem 1rem;
  }

  h1 {
    line-height: 1;
    font-weight: normal;
    + p {
      font-size: 1.25rem;
    }
  }

  .socials {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .socials a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease;
    color: var(--theme-text);
  }

  .socials a:hover {
    opacity: 0.7;
  }

  .socials :global(svg) {
    width: 24px;
    height: 24px;
    fill: currentColor;
  }
</style>
