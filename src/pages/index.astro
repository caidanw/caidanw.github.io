<style>
  body {
    max-width: 70ch;
    padding: 3rem 1rem;
    margin: auto;
    font-size: 1.125rem;
  }
  header {
    display: flex;
    gap: 2rem;

    > div {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }
  }
  h1 {
    line-height: 1;
    font-weight: normal;
    + p {
      font-size: 1.5rem;
    }
  }
  hr {
    margin: 2rem 0;
    border: none;
    height: 1px;
    background-color: var(--theme-border);
  }

  .socials {
    display: flex;
    align-items: flex-end;
    flex-grow: 1;
    gap: 1rem;

    > a {
      font-size: 0.875rem;
      line-height: 1;
      text-decoration: none;
      color: var(--theme-text);
      transition: border-color 0.3s;
      padding: 0.5rem 1rem;
      border: 1px solid var(--theme-border);
      border-radius: 0.5rem;

      &:hover {
        border-color: var(--theme-accent);
      }
    }
  }

  section p {
    margin-bottom: 1.5rem;
  }
</style>
