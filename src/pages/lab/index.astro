---
import Layout from '../../layouts/Layout.astro'
---

<Layout title="the lab">
  <div class="caution-tape top">///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///</div>
  <main>
    <div class="laboratory">LABORATORY</div>
    <p class="welcome">Welcome to the lab - my staging area for experiments and works-in-progress. Feel free to explore and see what's cooking.</p>
    <ul>
      <li><a href="./temp.astro">temp.astro</a></li>
    </ul>
  </main>
  <div class="caution-tape bottom">///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///CAUTION///</div>
</Layout>

<style>
  main {
    max-width: 80ch;
    margin: 0 auto;
    padding: 0 2rem;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.5rem;

    @media (max-width: 768px) {
      padding: 0 1.5rem;
    }
  }

  .caution-tape {
    position: fixed;
    left: 0;
    width: 200%;
    background: repeating-linear-gradient(
      45deg,
      var(--color-akira-red),
      var(--color-akira-red) 40px,
      var(--color-gray-darker) 40px,
      var(--color-gray-darker) 80px
    );
    color: var(--color-white);
    font-family: var(--font-mono);
    font-weight: bold;
    font-size: 1rem;
    padding: 0.5rem 0;
    white-space: nowrap;
    overflow: hidden;
    z-index: 1000;
    letter-spacing: 0.2em;
  }

  .caution-tape.top {
    top: 0;
    animation: scrollLeft 20s linear infinite;
  }

  .caution-tape.bottom {
    bottom: 0;
    animation: scrollRight 20s linear infinite;
  }

  @keyframes scrollLeft {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scrollRight {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .laboratory {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    width: fit-content;
    font-weight: bold;
    color: var(--theme-accent);
    line-height: 1.5;
    letter-spacing: 0.3em;
    margin: 0 auto;
    padding: 1.5rem 3rem;
    border: 4px double var(--theme-accent);
    border-radius: 8px;
    text-shadow:
      0 0 2px var(--theme-accent),
      0 0 4px var(--theme-accent);
    animation:
      neonHum 13s ease infinite,
      flicker 17s cubic-bezier(0.86, 0, 0.07, 1) infinite;
  }

  @keyframes neonHum {
    0%,
    100% {
      text-shadow:
        0 0 2px var(--theme-accent),
        0 0 4px var(--theme-accent);
      box-shadow:
        0 0 3px var(--theme-accent),
        inset 0 0 2px var(--theme-accent);
    }
    50% {
      text-shadow:
        0 0 3px var(--theme-accent),
        0 0 6px var(--theme-accent);
      box-shadow:
        0 0 5px var(--theme-accent),
        inset 0 0 3px var(--theme-accent),
        0 0 9px var(--theme-accent);
    }
  }

  @keyframes flicker {
    0%,
    19.4%,
    22%,
    23%,
    62.3%,
    64%,
    100% {
      opacity: 1;
    }
    20%,
    21.0%,
    22.9%,
    23.7%,
    62%,
    63%,
    63.9% {
      opacity: 0.5;
    }
  }

  .welcome {
    font-size: 1.25rem;
    line-height: 1.5;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  li {
    &::before {
      content: 'â€¢ ';
      color: var(--theme-text-dim);
      margin-right: 0.5rem;
    }
  }

  a {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--theme-text);
    text-decoration: none;
    position: relative;
    display: inline-block;
    transition: color 0.3s ease;

    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--theme-accent);
      transition: width 0.3s ease;
    }

    &:hover {
      color: var(--theme-accent);
      text-decoration: none;
    }

    &:hover::after {
      width: 100%;
    }
  }
</style>
