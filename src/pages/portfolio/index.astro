---
import Layout from '../../layouts/Layout.astro'

const projects = [
  {
    title: 'Stipple Studio',
    description: 'Interactive stippling tool with real-time visualization of the image processing pipeline',
    tech: 'Vanilla TypeScript, Canvas API (no libraries)',
    links: [
      { label: 'Live Demo', url: '/portfolio/stipple-studio' },
      { label: 'Source Code', url: 'https://github.com/caidanw/caidanw.github.io/blob/main/src/pages/portfolio/stipple-studio.astro' },
    ],
  },
]
---

<Layout title="Portfolio - Caidan Williams" description="Selected projects and experiments">
  <main>
    <h1>Portfolio</h1>
    <p class="subtitle">A showcase of selected projects and experiments I've worked on.</p>

    <div class="projects-grid">
      {
        projects.map((project) => (
          <section class="project">
            <a href={project.links[0]?.url || '#'} class="project-title list">
              {project.title}
            </a>
            <p class="project-description">{project.description}</p>
            <p class="project-tech">
              <span>Tech:</span> {project.tech}
            </p>
            <div class="project-links">
              {project.links.map((link) => (
                <a class="underline" href={link.url}>
                  {link.label}
                </a>
              ))}
            </div>
          </section>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  main {
    padding: 3rem 1rem;

    @media (min-width: 768px) {
      padding: 4rem 1.5rem;
    }

    @media (min-width: 1440px) {
      padding: 4rem 3rem;
      max-width: none;
    }
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
  }

  .subtitle {
    color: var(--theme-text-dim);
    margin-bottom: 3rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;

    @media (min-width: 1440px) {
      grid-template-columns: 1fr 1fr;
    }
  }

  .project-title {
    display: inline-block;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;

    &::after {
      height: 2px;
    }
  }

  .project-description {
    color: var(--theme-text-subtle);
    margin-bottom: 0.75rem;
    font-size: 1.2rem;
    text-wrap: pretty;
  }

  .project-tech {
    color: var(--theme-text-dim);
    margin-bottom: 0.5rem;

    span {
      color: var(--theme-text-subtle);
    }
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }
</style>
