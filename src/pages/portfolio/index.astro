---
import ListHeader from '@/components/ListHeader.astro'
import BreadcrumbLayout from '@/layouts/BreadcrumbLayout.astro'

const projects = [
  {
    title: 'Stipple Studio',
    description: 'Interactive stippling tool with real-time visualization of the image processing pipeline',
    tech: 'Vanilla HTML/JS/CSS, Canvas API (no libraries)',
    url: '/portfolio/stipple_studio',
    sourceUrl: 'https://github.com/caidanw/caidanw.github.io/blob/main/src/pages/portfolio/stipple_studio.astro',
  },
  {
    title: 'Orbit Simulation',
    description: 'A web-based simulation of planetary orbits using physics principles',
    tech: 'Vanilla HTML/JS/CSS, Canvas API (no libraries)',
    url: '/portfolio/orbit_sim',
    sourceUrl: 'https://github.com/caidanw/caidanw.github.io/blob/main/src/pages/portfolio/orbit_sim.astro',
  },
]
---

<BreadcrumbLayout title="Portfolio - Caidan Williams" description="Selected projects and experiments">
  <main>
    <ListHeader>
      <h1>Portfolio</h1>
      <p class="subtitle">A showcase of selected projects and experiments I've worked on.</p>
    </ListHeader>

    <div class="projects-grid">
      {
        projects.map((project) => (
          <section class="project">
            <div class="project-header">
              <a href={project.url} class="project-title list">
                {project.title}
              </a>
              <a href={project.sourceUrl} class="source-link">
                &raquo; source code &laquo;
              </a>
            </div>
            <p class="project-description">{project.description}</p>
            <p class="project-tech">
              <span>Tech:</span> {project.tech}
            </p>
          </section>
        ))
      }
    </div>
  </main>
</BreadcrumbLayout>

<style>
  .projects-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .project-header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .project-title {
    display: inline-block;
    font-size: 1rem;
    font-weight: bold;
  }

  .source-link {
    font-size: 0.875rem;
    color: var(--theme-text-dim);
    text-decoration: none;

    &:hover {
      color: var(--theme-text-subtle);
      text-decoration: underline;
    }
  }

  .project-description {
    color: var(--theme-text-subtle);
    margin-bottom: 0.5rem;
    font-size: 1rem;
    text-wrap: pretty;
  }

  .project-tech {
    color: var(--theme-text-dim);
    margin-bottom: 0.5rem;
    font-size: 0.75rem;

    span {
      color: var(--theme-text-subtle);
    }
  }
</style>
