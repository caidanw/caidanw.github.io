---
import Layout from '../layouts/Layout.astro'
import PageNav from '../components/PageNav.astro'
---

<Layout title="404 - Page Not Found">
  <main>
    <div class="content">
      <h1 class="error-code">404</h1>
      <div class="message">
        <p class="primary">Looks like this page doesn't exist (yet?)</p>
      </div>
      <hr />
      <div class="nav-section">
        <p class="nav-label">Here's where you probably meant to go:</p>
        <PageNav />
      </div>
      <footer>
        <p class="footer-text">Or maybe I broke something. That's also possible.</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: fit-content;
    margin: 0 auto;
    padding: 0 2rem;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: center;

    @media (max-width: 768px) {
      padding: 0 1.5rem;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .error-code {
    font-size: 6rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    color: var(--theme-accent);
    margin: 0;
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-1rem);
    }
  }

  .message {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;

    .primary {
      font-size: 1.5rem;
      font-weight: 500;
      margin: 0;
    }

    .secondary {
      font-size: 1.125rem;
      color: var(--theme-text-dim);
      margin: 0;
      font-style: italic;
    }
  }

  hr {
    border: none;
    border-top: 1px solid var(--theme-border);
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .nav-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    .nav-label {
      font-size: 1rem;
      color: var(--theme-text-dim);
      margin: 0;
      margin-bottom: 0.5rem;
    }
  }

  footer {
    margin-top: 2rem;

    .footer-text {
      font-size: 0.875rem;
      color: var(--theme-text-dim);
      font-style: italic;
      margin: 0;
      opacity: 0.7;
    }
  }
</style>
