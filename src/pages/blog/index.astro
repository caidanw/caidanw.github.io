---
import Hr from '@components/Hr.astro'
import BreadcrumbLayout from '@/layouts/BreadcrumbLayout.astro'
import ListHeader from '@/components/ListHeader.astro'

interface PostFrontmatter {
  title: string
  date: string
  description?: string
}

interface Post {
  frontmatter: PostFrontmatter
  url: string
}

// Get all blog posts and sort by date (newest first)
const postModules = import.meta.glob<Post>('./*.md', { eager: true })
const posts = Object.values(postModules)
const sortedPosts = posts.sort((a, b) => {
  const dateA = new Date(a.frontmatter.date)
  const dateB = new Date(b.frontmatter.date)
  return dateB.getTime() - dateA.getTime()
})

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  })
}
---

<BreadcrumbLayout title="Blog - Caidan Williams" description="Thoughts and writings by Caidan Williams">
  <main>
    <ListHeader>
      <h1>Blog</h1>
      <p>Thoughts and writings on coding, creativity, and more.</p>
    </ListHeader>

    <div class="posts-list">
      {
        sortedPosts.map((post) => (
          <article class="post">
            <time datetime={post.frontmatter.date.toString()}>{formatDate(post.frontmatter.date)}</time>
            <a href={post.url} class="post-title list">
              {post.frontmatter.title}
            </a>
          </article>
        ))
      }
    </div>
  </main>
</BreadcrumbLayout>

<style>
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .post-title {
    display: inline-block;
  }

  time {
    color: var(--theme-text-dim);
    white-space: nowrap;
  }
</style>
