---
import Hr from '@components/Hr.astro'
import BreadcrumbLayout from '@/layouts/BreadcrumbLayout.astro'
import ListHeader from '@/components/ListHeader.astro'

interface PostFrontmatter {
  title: string
  date: string
  description?: string
  draft?: boolean
}

interface Post {
  frontmatter: PostFrontmatter
  url: string
}

const isPublished = (post: Post) => import.meta.env.DEV || !post.frontmatter.draft
const byDateDescending = (a: Post, b: Post) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()

const posts = Object.values(import.meta.glob<Post>('./*.md', { eager: true }))
  .filter(isPublished)
  .sort(byDateDescending)

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: '2-digit',
  })
}
---

<BreadcrumbLayout title="Blog - Caidan Williams" description="Thoughts and writings by Caidan Williams">
  <main>
    <ListHeader>
      <h1>Blog</h1>
      <p>Thoughts and writings on coding, creativity, and more.</p>
    </ListHeader>

    <div class="posts-list">
      {
        posts.map((post) => (
          <article class="post">
            <time datetime={post.frontmatter.date.toString()}>{formatDate(post.frontmatter.date)}</time>
            <a href={post.url} class="post-title list">
              {post.frontmatter.title}
            </a>
          </article>
        ))
      }
    </div>
  </main>
</BreadcrumbLayout>

<style>
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .post-title {
    display: inline-block;
  }

  time {
    color: var(--theme-text-dim);
    white-space: nowrap;
    font-family: var(--font-mono);
  }
</style>
