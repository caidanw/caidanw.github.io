---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import BreadcrumbLayout from './BreadcrumbLayout.astro'
import Hr from '@/components/Hr.astro'
import { format, parseISO } from 'date-fns'

interface Props {
  frontmatter: {
    title: string
    date: string
    description?: string
  }
}

const { frontmatter } = Astro.props

const formattedDate = format(frontmatter.date, 'MMMM d, yyyy')
---

<BreadcrumbLayout title={frontmatter.title} description={frontmatter.description}>
  <main>
    <article>
      <header class="post-header">
        <h1>{frontmatter.title}</h1>
        <time datetime={frontmatter.date}>{formattedDate}</time>
      </header>
      <Hr />
      <div class="post-content">
        <slot />
      </div>
    </article>
  </main>
</BreadcrumbLayout>

<style>
  main {
    padding-bottom: 4rem;
  }

  .post-header {
    h1 {
      font-size: 2rem;
      font-weight: bold;
    }

    time {
      color: var(--theme-text-dim);
    }
  }

  .post-content {
    display: contents;
    line-height: 1.7;

    p {
      margin-bottom: 1.5rem;
    }

    em {
      font-style: italic;
    }

    strong {
      font-weight: bold;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: bold;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    h3 {
      font-size: 1.25rem;
      font-weight: bold;
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }

    ul,
    ol {
      margin-bottom: 1.5rem;
      padding-left: 1.5rem;

      ul,
      ol {
        margin-bottom: 0;
      }

      &.contains-task-list {
        padding-left: 0.5rem;
      }

      li.task-list-item {
        list-style: none;
      }
    }

    blockquote {
      border-left: 3px solid var(--theme-accent);
      padding-left: 1rem;
      margin: 1.5rem 0;
      color: var(--theme-text-subtle);
      font-style: italic;
    }

    code {
      font-family: var(--font-mono);
      color: var(--theme-code-text);
      background: var(--theme-code-bg);
      padding: 0.25rem;
      border-radius: 0.25rem;
    }

    pre {
      font-size: 0.875rem;
      line-height: 1.5;
      overflow-x: auto;
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      margin-bottom: 1.5rem;

      code {
        background: none;
        padding: 0;
      }
    }

    a {
      color: var(--theme-accent);
      text-decoration: underline;
      text-decoration-color: transparent;
      transition: text-decoration-color 0.2s ease;

      &:hover {
        text-decoration-color: var(--theme-accent);
      }
    }

    hr {
      border: 1px solid var(--theme-border);
      margin: 1.5rem 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.5rem;

      th,
      td {
        border: 1px solid var(--theme-table-border);
        padding: 0.5rem 1rem;
        text-align: left;

        &[align='center'] {
          text-align: center;
        }

        &[align='right'] {
          text-align: right;
        }
      }

      th {
        background: var(--theme-table-header-bg);
      }
    }
  }
</style>
